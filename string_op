#!/bin/bash
#Prints the string
echo "Enter your First Name"
#takes input for first name
read first_name
#Prints the string
echo "Enter your Last Name"
#takes input for last name
read last_name
#concats first_name and last_name in a new variable called full_name
full_name="$first_name $last_name"
#prints full name 
echo "My name is $full_name"
#prints lenth of the string
echo "${#full_name}"
#prints only first two letter of the string
echo "${full_name:0:2}"